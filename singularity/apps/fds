BootStrap: debootstrap
OSVersion: xenial
MirrorURL: http://us.archive.ubuntu.com/ubuntu/


%runscript
    echo "This is what happens when you run the container..."
    fds


%post
    echo "Hello from inside the container"
    sed -i 's/$/ universe/' /etc/apt/sources.list
    apt-get update
    apt-get -y install wget 
    apt-get clean
    wget https://github.com/firemodels/fds/releases/download/FDS6.6.0/FDS_6.6.0-SMV_6.6.0_linux64.sh
    chmod +x FDS_6.6.0-SMV_6.6.0_linux64.sh
    ./FDS_6.6.0-SMV_6.6.0_linux64.sh y
    mv /root/FDS /usr/local/


%environment
    export PATH=/usr/local/FDS/FDS6/bin:$PATH
   export LD_LIBRARY_PATH=/usr/lib64:/usr/local/FDS/FDS6/bin/LIB64:$LD_LIBRARY_PATH
    export LC_ALL=C

